{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018", "DOM"],
    "module": "commonjs",
    "noEmitOnError": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "outDir": "functions"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
